{% extends 'base.html.twig' %}

{% block body %}
<style>
    body{
        background-color: lightgray;
    }
    .container{
        min-height: 70vh;
    }
    tr{
        text-align: center;
    }
    h2{
        text-align: center;
        margin: 1.5em 0;
    }
    .dropdown {
        position: relative;
        display: inline-block;
    }
    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: #CFE2FF;
        min-width: 120px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        padding: 12px 16px;
        z-index: 1;
    }
    .dropdown:hover .dropdown-content {
        display: block;
    }
    .aDrop{
        text-decoration: none;
        color: black;
    }
    .aDrop:hover{
        color: grey;
    }
</style>
<div class="container">
    <h2 class="page-header">All {{type}}s</h2>
    <table class="table table-striped align-middle">
        <thead>
            <tr class="table-primary">
                <th>#</th>
                <th></th>
                <th>Event</th>
                <th>Start Date</th>
                <th>Country</th>
                <th></th>
                <td><div class="dropdown">
                        <span>âˆ‡Filter</span>
                        <div class="dropdown-content">
                            <a class="aDrop" href="/type/Festival">Festivals</a><br>
                            <a class="aDrop" href="/type/Concert">Concerts</a><br>
                            <a class="aDrop" href="/type/Sport">Sport</a><br>
                            <a class="aDrop" href="/">All Events</a>
                        </div>
                    </div></td>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <th scope="row">{{event.id}}</th>
                    <td><img src="{{event.image}}" alt="{{event.name}}" width="100px" class="img-fluid img-thumbnail"></td>
                    <td>{{event.name}}</td>
                    <td>{{event.start|date('F j, Y; g:i a')}}</td>
                    <td>{{event.country}}</td>
                    <td> 
                        <a href="/details/{{event.id}}" class="btn btn-success">View</a>     
                        <a href="/edit/{{event.id}}" class="btn btn-warning">Edit</a>
                        <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>       
                    </td>
                    <td></td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
